{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/api/lite/parse-report$",
      "dest": "/api/lite/parse-report.js"
    },
    {
      "src": "^/api/lite/upload-token$",
      "dest": "/api/lite/upload-token.js"
    },
    {
      "src": "^/api/lite/blob-upload$",
      "dest": "/api/lite/blob-upload.js"
    },
    {
      "src": "^/api/lite/job-status$",
      "dest": "/api/lite/job-status.js"
    },
    {
      "src": "^/api/lite/start-processing$",
      "dest": "/api/lite/start-processing.js"
    },
    {
      "src": "^/api/lite/process-worker$",
      "dest": "/api/lite/process-worker.js"
    },
    {
      "src": "^/api/(.*)$",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/lite/process-worker",
      "schedule": "* * * * *"
    }
  ]
}
